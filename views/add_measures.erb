<form action="/adding_measures" method="post">
<div class="field">
  <label class="label">Weight</label>
  <div class="column is-two-fifths"> <!-- -->
  <div class="control">
    <input class="input" type="number" min="0" step ="1" max="200" placeholder="Kg" name ="weight">
  </div>
  </div><!-- -->
</div>
<div class="field">
  <label class="label">Height</label>
   <div class="column is-two-fifths"> <!-- -->
  <div class="control">
    <input class="input" type="number" min="0.00" step ="0.01" max="200.00" placeholder="0.00 Meters" name="height">
  </div>
   </div><!-- -->
</div>

<div class="field is-grouped">
  <div class="control">
    <button class="button is-link" type="submit" value="guardar">Submit</button>
  </div>
  <div class="control">
    <button class="button is-text" type="reset" value="limpiar">Clear</button>
  </div>
</div>
</form>